# PhotoVault Configuration
# Copy this file to .env and customize the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
POSTGRES_USER=photovault
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=photovault
DB_PORT=5432

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_PORT=6379

# ===========================================
# SECURITY
# ===========================================
# Generate a secure key: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# FIRST ADMIN USER
# ===========================================
# This user will be created automatically on first startup
FIRST_ADMIN_EMAIL=admin@photovault.local
FIRST_ADMIN_PASSWORD=admin123

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# Required for email verification and password reset
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@photovault.local

# ===========================================
# NAS CONFIGURATION
# ===========================================
# Path to your NAS mount point on the host system
# For Synology: /volume1/photos or similar
NAS_PATH=/path/to/your/nas/photos

# ===========================================
# PORTS
# ===========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000

# ===========================================
# URLS
# ===========================================
# Frontend URL (used for email links)
FRONTEND_URL=http://localhost:3000
# API URL for frontend to connect to backend
VITE_API_URL=http://localhost:8000

# ===========================================
# AI FEATURES
# ===========================================
# Enable/disable AI features (all run locally)
FACE_RECOGNITION_ENABLED=true
CLIP_ENABLED=true
YOLO_ENABLED=true

# ===========================================
# SYNOLOGY NAS SMB CONFIGURATION (Optional)
# ===========================================
# If mounting NAS via SMB instead of direct path
# SMB_SERVER=192.168.1.100
# SMB_SHARE=photos
# SMB_USERNAME=your_nas_user
# SMB_PASSWORD=your_nas_password
# SMB_DOMAIN=WORKGROUP
